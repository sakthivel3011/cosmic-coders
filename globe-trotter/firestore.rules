rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can create trips and read/write their own trips
    match /trips/{tripId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.userId || 
        resource.data.shared == true
      );
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Activities can be read/written by trip owners
    match /activities/{activityId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // Budgets are private to trip owners
    match /budgets/{tripId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/trips/$(tripId)) &&
        get(/databases/$(database)/documents/trips/$(tripId)).data.userId == request.auth.uid;
      allow update, delete: if request.auth != null &&
        exists(/databases/$(database)/documents/trips/$(tripId)) &&
        get(/databases/$(database)/documents/trips/$(tripId)).data.userId == request.auth.uid;
    }
  }
}